                    Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur sodales pretium diam in aliquam. Nulla eget purus nec dolor blandit elementum et in quam." 
                    HorizontalOptions="StartAndExpand" 
                    Style="{StaticResource TextLabelStyle}" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>